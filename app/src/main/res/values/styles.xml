<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TransparentBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>
    <style name="textview" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#424242</item>
    </style>
    <style name="imageview" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:layout_marginRight">16dp</item>
    </style>


</resources>
